<%= render :partial => 'admin/shared/article_tabs', :locals => {:current => "Article Details"} %>

<h5><%= h @article.posted_at.strftime('%A %B %d, %Y at %I:%M%p').gsub(/\s0/, ' ') %></h5>
<br/>

<% for image in @article.images do %>
  <%= image_tag image.attachment.url(:small), :alt => @article.title %>
<% end %>

<%= RDiscount.new(@article.body).to_html.html_safe %>

<br class="clear" />
  
<p>
  <%= link_to_edit @user %> &nbsp;
  <%= link_to t('back'), collection_url %>
</p>
