<%= render :partial => 'admin/shared/article_tabs', :locals => {:current => "Article Details"} %>

<% if @article.try(:errors).present? %>
  <%= render 'shared/error_messages', :target => @article %>
<% end %>

<% form_for([:admin, @article]) do |f| %>
  <%= render "form", :form => f %>
  <p class="form-buttons">
    <%= button t("update") %> <%= t('or') %> <%= link_to t('cancel'), collection_url %>
  </p>
<% end %>