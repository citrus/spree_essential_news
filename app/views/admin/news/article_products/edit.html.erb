<%= render :partial => 'admin/shared/article_tabs', :locals => {:current => "Images"} %>

<% if @article_product.try(:errors).present? %>
  <%= render 'shared/error_messages', :target => @article_product %>
<% end %>

<% form_for([:admin, @article.id, @article_product], :url => admin_article_product_url(@article, @article_product), :html => { :multipart => true }) do |f| %>
    <p>
      <%= label_tag ("thumbnail") %>:<br/>
      <%= link_to(product_tag(@article_product.attachment.url(:mini)), @article_product.attachment.url(:product)) %>
    </p>
    <%= render "form", :form => f %>
  </table>
  <p class="form-buttons">
    <%= button t("update") %>
    or <%= link_to t("cancel"), admin_article_products_url(@article), :id => "cancel_link" %>
  </p>
<% end %>